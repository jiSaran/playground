<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_30dp"
        android:gravity="center"
        android:text="@string/invite_msg"
        android:textColor="@color/email"
        android:textSize="@dimen/txt_20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_skip"
        android:layout_below="@id/tv_invite">

        <ImageView
            android:id="@+id/iv_messenger"
            android:layout_width="@dimen/hex_width"
            android:layout_height="@dimen/hex_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_90dp"
            android:background="@drawable/ic_bg_messenger"
            android:padding="@dimen/space_25dp"
            app:srcCompat="@drawable/ic_messenger" />

        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="@dimen/hex_width"
            android:layout_height="@dimen/hex_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_5dp"
            android:layout_marginStart="@dimen/space_48dp"
            android:background="@drawable/ic_bg_email"
            android:padding="@dimen/space_25dp"
            app:srcCompat="@drawable/ic_sms" />

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="@dimen/hex_width"
            android:layout_height="@dimen/hex_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/space_5dp"
            android:layout_marginEnd="@dimen/space_48dp"
            android:background="@drawable/ic_bg_email"
            android:padding="@dimen/space_25dp"
            app:srcCompat="@drawable/ic_email" />

        <ImageView
            android:id="@+id/iv_whatsapp"
            android:layout_width="@dimen/hex_width"
            android:layout_height="@dimen/hex_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_80dp"
            android:background="@drawable/ic_bg_whatsapp"
            android:padding="@dimen/space_25dp"
            app:srcCompat="@drawable/ic_whatsapp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="@dimen/space_20dp"
        android:paddingEnd="@dimen/space_20dp"
        android:paddingStart="@dimen/space_20dp"
        android:text="@string/tv_skip" />

</RelativeLayout>